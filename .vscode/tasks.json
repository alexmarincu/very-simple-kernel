{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "ceedling release",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/very-simple-kernel"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "ceedling clobber",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/very-simple-kernel"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "ceedling test:all",
            "group": "test",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/very-simple-kernel"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "${command:python.interpreterPath} ./run-cppcheck.py",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Lint exhaustive",
            "type": "shell",
            "command": "${command:python.interpreterPath} ./run-cppcheck.py --exhaustive",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "CCM",
            "type": "shell",
            "command": "${command:python.interpreterPath} ./run-lizard.py",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Changelog",
            "type": "shell",
            "command": "${command:python.interpreterPath} ./changelog.py ${input:previousVersion} ${input:newVersion}",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "new"
            }
        },
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "previousVersion",
            "description": "Previous version"
        },
        {
            "type": "promptString",
            "id": "newVersion",
            "description": "New version"
        }
    ]
}
